<link rel="stylesheet" href="/css/home.css" />
<h1>Codeial <%= title%></h1>


<section id="feed-posts">
 <h4>Posts</h4>
 <% if(locals.user) {%>
 <form action="posts/create" id="new-post-form" method="post" >
    <textarea placeholder="Type Here .." name="content" cols="30" rows="3" required></textarea>
    <input type="Submit" value="post"> 
 </form>
  <%}%>
  <section id="post-list">
      <% if(locals.posts_list) {%>
         <% for(let i = 0;i<posts_list.length;i++){ %>
           <p> <%= posts_list[i].content %> : <%= posts_list[i].user.name %>  </p>  
           <div class="post-comments">
                 <%if(locals.user) {%>
                  <form action="/comment/create" method="post">
                       <input type="text" name="content" placeholder="Type Here To Add Comment.." required>
                       <input type="hidden" name="post" value="<%= posts_list[i]._id%>" >
                       <input type="submit" value="Add Comment">
                  </form>
                  <%}%>
                  <div class="post-comments-list">
                       <ul id="post-comments-<%= posts_list[i]._id %>">
                            <% for(let comment of posts_list[i].comments ) {%>
                              <p> <small><%= comment.user.name%></small> <%= comment.content %></p>
                              
                            <%}%>  
                       </ul>
                  </div>
           </div>
         <%}%>   
      <%}%>   
  </section> 

</section>